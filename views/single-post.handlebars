<h2>{{post.title}}</h2>
<p>Posted by {{post.user.username}} on {{formatDate post.createdAt}}</p>
<p>{{post.content}}</p>

{{#if loggedIn}}
    <form id="comment-form" action="/api/comments" method="POST">
        <textarea name="content" placeholder="Add a comment..." required></textarea>
        <input type="hidden" name="postId" value="{{post.id}}">
        <button type="submit">Submit</button>
    </form>
{{/if}}

<div id="comments">
    {{#each post.comments}}
        <div class="comment">
            <p>{{this.content}}</p>
            <p>â€” {{this.user.username}} on {{formatDate this.createdAt}}</p>
        </div>
    {{/each}}
</div>
