{{#each posts}}
    <div class="post">
        <h2>{{this.title}}</h2>
        <p>{{this.content}}</p>
        <p>Posted by {{this.user.username}} on {{formatDate this.createdAt}}</p>
        {{#if ../loggedIn}}
            <a href="/post/{{this.id}}">Read more...</a>
        {{/if}}
    </div>
{{else}}
    <p>No posts to display.</p>
{{/each}}
